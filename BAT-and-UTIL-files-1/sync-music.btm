:syncDriveLetter [DriveLetter]
    :: Check parameters
        if "%DriveLetter%" == "" (%COLOR_ALARM% %+ echos * %%DriveLetter passed to :syncDriveLetter cannot be blank?!?! What's going on?!?! %+ %COLOR_NORMAL% %+ pause %+ echo. %+ return)


    :: Let user know what's going on:
        echo. %+ echo. %+ echo. %+ echo. %+ echo. %+ echo. %+ echo. %+ echo. 
        %COLOR_IMPORTANT% %+ echo *** SyncDriveLetter: %@UPPER[%DriveLetter%]:... %+ %COLOR_NORMAL%

    :: Validate some things:        
        if          "%@READY[%DriveLetter%]" == "0"                       (%COLOR_WARNING% %+ echos * %DriveLetter% is not ready!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!%ansi_reset% %+ %COLOR_NORMAL% %+ echo. %+ goto :ReturnAlready)
        if          "%@UPPER[%DriveLetter%]" == "%@UPPER[%MP3Drive%]"     (%COLOR_WARNING% %+ echos * %DriveLetter% is the official repository drive! Not touching!!%ansi_reset% %+ %COLOR_NORMAL% %+ echo. %+ goto :ReturnAlready)
        if          "%@UPPER[%DriveLetter%]" == "C"                       (%COLOR_WARNING% %+ echos * We do not sync to C drives! Sorry!!!!!!!!!!!!!!!!!!!!!!!!!!!!!%ansi_reset% %+ %COLOR_NORMAL% %+ echo. %+ goto :ReturnAlready)
        if "%[ALREADY_SYNCED_%DriveLetter%]" == "1" .and. "%2" != "force" (%COLOR_WARNING% %+ echos * This drive was already synced today... Use “force” option!!!!!%ansi_reset% %+ %COLOR_NORMAL% %+ echo. %+ goto :ReturnAlready)
        if       "%@JUNCTION[%DriveLetter%:\mp3]" == "%MP3OFFICIAL%"      (%COLOR_WARNING% %+ echos * %DriveLetter%:\mp3 is a junction to %@JUNCTION[%DriveLetter%:\mp3] which is our official collection!!!! Not touching!!!! %+ %COLOR_NORMAL% %+ echo. %+ goto :ReturnAlready)
        if        "%@SYMLINK[%DriveLetter%:\mp3]" == "%MP3OFFICIAL%"      (%COLOR_WARNING% %+ echos * %DriveLetter%:\mp3 is a sym link to %@SYMLINK[%DriveLetter%:\mp3], which is our official collection!!!! Not touching!!!! %+ %COLOR_NORMAL% %+ echo. %+ goto :ReturnAlready)
        :ReCheck_261
        iff not isdir %DriveLetter%:\mp3 .and. not exist "%DriveLetter%:\__ mp3 sync option - collapse __" then
                %COLOR_WARNING% 
                echos * %@UPPER[%DriveLetter%:] does not have an \mp3\ folder!!!!!!!!! %ansi_reset% 
                echo.
                unset /q answer
                call AskYN "Create %@UPPER[%DriveLetter%:]\mp3" no 0 
                iff "Y" == "%ANSWER%" then
                        mkdir %@UPPER[%DriveLetter%:]\mp3
                        goto :ReCheck_261
                endiff
                goto :ReturnAlready
        endiff
        for %computer in (%ALL_COMPUTERS_UP%) if "%@UPPER[%[%DriveLetter%]]" == "%@UPPER[%[%[DRIVE_C_%computer%]]]" .and. "" != "%[%DriveLetter%]" .and. "" != "%[DRIVE_C_%computer%]" (%COLOR_WARNING% %+ echos * We do not sync to C drives, and %DriveLetter% is %computer%'s C drive! Sorry! %+ %COLOR_NORMAL% %+ goto :ReturnAlready)
  
    :: Pause?
        call pause-for-x-seconds 6000
             
    :: Pass to our handler:
        if  exist "%DriveLetter:\__ mp3 holder __" goto :GENERIC_YES           
        rem isdir "%DriveLetter:\mp3\"             goto :GENERIC_YES           
                                                   goto :GENERIC_NO            
            :GENERIC_YES
                call debug "generic handling"
                gosub GENERIC %DriveLetter%                  %+ REM New-and-Improved Generic handling
                goto  :returnFromSyncDriveLetter
            :GENERIC_NO
                call debug "deprecated custom handling"
                gosub DeprecatedCustomHandling %DriveLetter% %+ REM Fall through to our old code, if we must.
                goto  :returnFromSyncDriveLetter
        :returnFromSyncDriveLetter
        set ALREADY_SYNCED_%DriveLetter%=1

:ReturnAlready
return
