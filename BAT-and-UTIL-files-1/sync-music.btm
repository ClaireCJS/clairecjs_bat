                    :WipeDeviceFully [DriveLetter Desc BaseDir PlaylistDir Trigger]
                        %COLOR_WARNING% %+ echo     - Wiping device (%@UPPER[%DriveLetter]:) fully...%ansi_reset% %+ if "%DEBUG_WIPE%" == "1" (pause) %+ %COLOR_NORMAL%
                        if isdir  %DriveLetter%:\%BaseDir%                          (goto :MP3_Dir_Fine)
                        :f exist "%DriveLetter%:\mp3 sync option - no playlists __" (goto :MP3_Dir_Fine)
                            call alarm-beep basedir \%BaseDir% should exist here! 2019340912340923!) 
                            %DriveLetter%:\
                        :MP3_Dir_Fine
                        %DriveLetter%:
                        %DriveLetter%:\%BaseDir%\
                        *cd %DriveLetter%:\%BaseDir%
                        rem %COLOR_DEBUG% %+ echo          - About to remove all ... driveletter=%driveletter%, basedir=%basedir%, curdir=%_CWP 
                        rem pause "%ansi_color_warning_soft%About to remove all directories & files from ... %driveletter%:\%basedir%\ (curdir=%_CWP) 
                        call less_important "curdir=“%_CWD”"
                        call askYN "Remove all directories & files from %blink_on%%driveletter%:\%basedir%\%blink_off%" no 9999
                        if "N" == "%ANSWER%" return

                        rem Remove all subdirectories and files inside of them:
                                gosub RemoveAllDirectoriesANDFiles
                        rem Remove files in root, too, since we collapse out of \mp3\ in situations:
                                %DriveLetter%:
                                %DriveLetter%:\
                                *cd \
                                if exist %FILEMASK_AUDIO% (*del %FILEMASK_AUDIO%)                       
                    return		
