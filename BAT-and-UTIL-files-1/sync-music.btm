                    :WipeDeviceAtAppropriateLevel [driveletter desc basedir playlistdir trigger]
                        if " %NOCLEAN%"     == "1" .or. "%QUICK%" == "1" .or. "%SKIPWIPE%" == "1" return
                        if " %ANSWER_WIPE%" == "1" gosub WipeDeviceFully     %DriveLetter% %Desc% %BaseDir% %PlaylistDir% %Trigger%
                        iff "%ANSWER_WIPE%" != "1" then
                                echo.
                                gosub CleanDevice %DriveLetter% %Desc% %BaseDir% %PlaylistDir% %Trigger%
                        endiff
                    return
