                        call warning "Cleaning device (%DriveLetter%)... Not deleting anything" 
                        if "%DEBUG_WIPE%" == "1" (pause)
                        %COLOR_NORMAL%  
                        %DriveLetter:\ 
                        %DriveLetter:\%BaseDir\ 
                        :isdir_618
                        if not isdir %DriveLetter:\%BaseDir\ (echo %DriveLetter:\%BaseDir\ doesn't exist! Let's make it! %+ pause %+ md %DriveLetter:\%BaseDir\ %+ goto /i isdir_618)
                            gosub ensureFileList
                            grep -i "[\\\/]unsorted"  filelist.txt   >:u8%WIPELIST%  %+ REM wipes \unsorted\ files
                            grep -i "\.[bw]a[kv]$"    filelist.txt  >>:u8%WIPELIST%  %+ REM wipes .bak and .wav 
                            grep -i ".flac$"          filelist.txt  >>:u8%WIPELIST%  %+ REM wipes .flack
                        %WIPECOMMAND% @%WIPELIST%
                        %WIPECOMMAND%  %WIPELIST%
                    return		
